{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"lib": ["es6"],
		"allowJs": true,
		"outDir": "dist",
		"rootDir": "",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"baseUrl": "./src",
		"paths": {
			"@config/*": ["config/*"],
			"@controllers/*": ["controllers/*"],
			"@customTypes/*": ["types/*"],
			"@entities/*": ["entities/*"],
			"@localization/*": ["localization/*"],
			"@middlewares/*": ["middlewares/*"],
			"@models/*": ["models/*"],
			"@routes/*": ["routes/*"],
			"@services/*": ["services/*"],
			"@utils/*": ["utils/*"]
		}
	}
}
