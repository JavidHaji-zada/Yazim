{
	"name": "yazim-backend",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"build": "tsc",
		"test": "echo \"Error: no test specified\" && exit 1",
		"dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\"",
		"lint": "eslint . --ext .js,.ts",
		"start": "nodemon",
		"start:prod": "tsc && node -r ts-node/register/transpile-only -r tsconfig-paths/register ./dist/index.js",
		"start:dev": "ts-node -r tsconfig-paths/register ./index.ts"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"nodemonConfig": {
		"ignore": [
			"**/*.test.ts",
			"**/*.spec.ts",
			".git",
			"node_modules"
		],
		"watch": [
			"src"
		],
		"exec": "node -r tsconfig-paths/register -r ts-node/register ./index.ts",
		"ext": "ts, js"
	},
	"dependencies": {
		"@sendgrid/mail": "^7.7.0",
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"express-async-handler": "^1.2.0",
		"express-validator": "^6.15.0",
		"http": "0.0.1-security",
		"jade": "^1.11.0",
		"jsonwebtoken": "^9.0.0",
		"module-alias": "^2.2.3",
		"pg": "^8.10.0",
		"pg-hstore": "^2.3.4",
		"sequelize": "^6.31.1",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^4.9.5"
	},
	"devDependencies": {
		"@types/bcrypt-nodejs": "^0.0.31",
		"@types/bcryptjs": "^2.4.2",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"@types/jsonwebtoken": "^9.0.2",
		"@types/node": "^18.15.11",
		"@types/pg": "^8.6.6",
		"@typescript-eslint/eslint-plugin": "^5.58.0",
		"@typescript-eslint/parser": "^5.58.0",
		"concurrently": "^7.6.0",
		"eslint": "^8.38.0",
		"eslint-config-google": "^0.14.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^4.2.1",
		"nodemon": "^2.0.22",
		"prettier": "^2.8.7"
	},
	"_moduleAliases": {
		"@config": "./src/config",
		"@controllers": "./src/controllers",
		"@entities": "./src/entities",
		"@localization": "./src/localization",
		"@middlewares": "./src/middlewares",
		"@models": "./src/models",
		"@routes": "./src/routes",
		"@services": "./src/services",
		"@types": "./src/types",
		"@utils": "./src/utils"
	}
}
